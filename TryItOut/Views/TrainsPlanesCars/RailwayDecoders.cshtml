
@model TryItOut.ViewModels.RailwayViewModel<TryItOut.ViewModels.RailwayDecoder>

@{
    ViewBag.Title = "RailwayDecoders";
    Layout = "~/tryitout/Views/Shared/_Layout.cshtml";
}

<h2>Railway Decoders</h2>


@{
    if (!Model.HasData)
    {
        <p>@Model.Message.Text</p>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Manufacturer</th>
                    <th>Description</th>
                    <th>Stay A Live</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var decoder in Model.ListOf)
                {
                <tr>
                    <td data-identifier="@decoder.DecoderId">@decoder.DecoderId</td>
                    <td data-manufacturer="@decoder.Manufacturer">@decoder.Manufacturer</td>
                    <td data-description="@decoder.Description">@decoder.Description</td>
                    <td data-stayalive="@decoder.StayALive">@decoder.StayALive</td>
                </tr>
                }
            </tbody>
        </table>
    }
}

@using (Html.BeginForm("RailwayDecoderEdit", "TrainsPlanesCars", FormMethod.Post, new { id = "FormWrapper" }))
{
    <input type="hidden" id="identifier" name="Hidden-identifier" />

    <div class="row">
        <div class="col-sm-12">
            @Html.ActionLink("New*", "RailwayDecoderNew", "TrainsPlanesCars", null, new { @class = "btn btn-default" })
            @Html.ActionLink("Back", "index", "Home", null, new { @class = "btn btn-default" })
        </div>
    </div>
}


