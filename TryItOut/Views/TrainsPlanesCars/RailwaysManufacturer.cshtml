
@model TryItOut.ViewModels.RailwaysManufacturersViewModel

@{
    ViewBag.Title = "RailwaysManufacturer";
    Layout = "~/tryitout/Views/Shared/_Layout.cshtml";
}

<h2>Railways Manufacturers</h2>

@{
    if (!Model.HasManufacturers)
    {
        <p>@Model.Message.Text</p>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var man in Model.Manufacturers)
                {
                    <tr>
                        <td data-identifier="@man.manufacturerId">@man.manufacturerId</td>
                        <td data-name="@man.Name">@man.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}


@using (Html.BeginForm("RailwayManufacturerEdit", "TrainsPlanesCars", FormMethod.Post, new { id = "FormWrapper" }))
{
    <input type="hidden" id="identifier" name="Hidden-identifier" />

    <div class="row">
        <div class="col-sm-12">
            @Html.ActionLink("New*", "RailwayManufacturerNew", "TrainsPlanesCars", null, new { @class = "btn btn-default" })
            @Html.ActionLink("Back", "index", "Home", null, new { @class = "btn btn-default" })
        </div>
    </div>
}

