
@model TryItOut.ViewModels.LocomotiveDetailsViewModel

<!-- **************** -->
<!-- new row in table -->
<!-- **************** -->

<tr id="LocoDetails">
    <td colspan="8">
        <div class="well well-sm">
            <strong>@Model.Name (@Model.LocoId)</strong>

            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <div class="col-sm-4">Classification</div>
                    <div class="col-sm-8">@Model.ClassificationDetails</div>
                </div>
                <div class="col-sm-12 col-md-6">
                    <div class="col-sm-4">Description</div>
                    <div class="col-sm-8">@Model.Description</div>
                </div>

                <div class="col-sm-12 col-md-6">
                    <div class="col-sm-4">Decoder</div>
                    <div class="col-sm-8"> @Model.DecoderDetails</div>
                </div>
                <div class="col-sm-12 col-md-6">
                    <div class="col-sm-4">DDC Value</div>
                    <div class="col-sm-8">@Model.DCCValue</div>
                </div>
            </div>

        </div>
    </td>
</tr>