
@model TryItOut.ViewModels.LocomotiveEditViewModel

@using TryItOut.ViewModels

<h2>Locomotive</h2>

<!-- form -->
@using (Html.BeginForm("LocoEditNew", "TrainsPlanesCars", FormMethod.Post))
{
    <div class="row">
        <!-- row has two columns -->
        <div class="col-md-9">
            <div class="form-horizontal">
                <div class="row">
                    <div class="col-xs-12">

                        <!-- Name -->
                        <div class="form-group required">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3 col-lg-3" })
                            <div class="col-md-9 col-lg-9">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Locomotive type -->
                        <div class="form-group required">
                            @Html.LabelFor(model => model.SelectedType, htmlAttributes: new { @class = "control-label col-md-3 col-lg-3" })
                            <div class="col-md-6 col-lg-6">

                                @Html.DropDownList("SelectedType",
                                                   Model.LocoType,
                                                   "Select",
                                                   new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.SelectedType, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Manufacturer -->
                        <div class="form-group required">
                            @Html.LabelFor(model => model.SelectedMadeBy, htmlAttributes: new { @class = "control-label col-md-3 col-lg-3" })
                            <div class="col-md-6 col-lg-6">

                                @Html.DropDownList("SelectedMadeBy",
                                                   Model.Manufacturer,
                                                   "Select",
                                                   new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.SelectedMadeBy, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- DDC Number -->
                        <div class="form-group required">
                            @Html.LabelFor(model => model.DCCValue, htmlAttributes: new { @class = "control-label col-md-3 col-lg-3" })
                            <div class="col-md-3 col-lg-3">
                                @Html.EditorFor(model => model.DCCValue, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DCCValue, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Year Purchased -->
                        <div class="form-group required">
                            @Html.LabelFor(model => model.YearPurchased, htmlAttributes: new { @class = "control-label col-md-3 col-lg-3" })
                            <div class="col-md-3 col-lg-3">
                                @Html.EditorFor(model => model.YearPurchased, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.YearPurchased, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="form-group required">
                            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-3 col-lg-3" })
                            <div class="col-md-9 col-lg-9">
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-offset-1 col-sm-11">
                        @Html.ValidationSummary(false)
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">

        </div >

    </div>

    <div class="row">
        <div class="col-sm-12">
            <!-- Default post back btn -->
            <input type="submit" value="Save" class="btn" name="btn" />
            <!-- Cancel uses formaction for different actionresult in controller and no validation -->
            <input type="submit" value="Cancel" class="btn" name="btn" formaction="@(Url.Action("Index","TrainsPlanescars"))" formnovalidate="formnovalidate" />
        </div>
    </div>
}


<!-- form -->
