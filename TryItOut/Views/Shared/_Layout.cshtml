
@model TryItOut.ViewModels.BaseViewModel

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, user-scalable=no">

    <title>@ViewBag.Title - To Do </title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/datatablesCss")

    <!-- load here as need by mark up, datatables -->

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datatable")

    @*<link href="~/Content/SideMenu.css" rel="stylesheet" />
    <link href="~/Content/HangingMenu.css" rel="stylesheet" />*@

</head>
<body>

    @*<div class="HangingMenu">
        Menu
    </div>*@

    <div class="container">

        <div class="navbar">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Try It Out", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Users", "About", "Home")</li>
                    @*<li>@Html.ActionLink("ToDo", "About", "Home")</li>*@
                    <li>@Html.ActionLink("Development", "About", "Home")</li>
                </ul>
            </div>
        </div>

        <div>
            @RenderBody()
        </div>

        <footer>
            <hr />
            &copy; @DateTime.Now.Year - Try It Out ASP Application
        </footer>
    </div>

    <!-- load here for performance and page rendered first, makes DOM avaliable -->

    @Scripts.Render("~/bundles/site")

    @RenderSection("scripts", required: false)

    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

</body>
</html>
